<div class="flex justify-center flex-col">
  <h2 class="text-center text-xl">Change your password</h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "users/shared/error_messages", resource: resource %>
    <%= f.hidden_field :reset_password_token %>

    <div class="field">
      <%= f.label :password, "New password" %><br />
      <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em><br />
      <% end %>
      <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "w-full rounded-lg bg-[var(--elevation-high)]"  %>
    </div>

    <div class="field mt-4">
      <%= f.label :password_confirmation, "Confirm new password" %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full rounded-lg bg-[var(--elevation-high)]"  %>
    </div>

    <div class="actions mt-4 w-full">
      <%= f.submit "Change my password", class: "rounded-lg bg-[--content-accent] w-full py-2" %>
    </div>
  <% end %>

  <%= render "users/shared/links" %>
</div>
